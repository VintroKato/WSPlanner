<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SettingsActivity">

    <TextView
        android:id="@+id/settings_title_label"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/settings_title"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/theme_header"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/settings_theme_label"
        style="@style/label"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_title_label" />


    <GridLayout
        android:id="@+id/theme_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:columnCount="3"
        android:rowCount="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_header">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_auto_theme"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_theme_option_auto" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_dark_theme"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_theme_option_dark" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_light_theme"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_theme_option_light" />
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <TextView
        android:id="@+id/language_header"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/settings_language_label"
        style="@style/label"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/theme_layout" />

    <GridLayout
        android:id="@+id/language_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language_header">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_english"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_language_option_english" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_russian"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_language_option_russian" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_ukrainian"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_language_option_ukrainian" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_polish"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/settings_language_option_polish" />
        </com.google.android.material.card.MaterialCardView>
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_button"
        style="@style/button"
        android:layout_width="183dp"
        android:layout_height="57dp"
        android:text="@string/settings_button_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/language_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>