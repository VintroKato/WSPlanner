<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <TextView
        android:id="@+id/title_label"
        style="@style/label"
        android:layout_marginTop="20dp"
        android:text="@string/configure_title"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/login_label"
        style="@style/label"
        android:layout_marginTop="60dp"
        android:text="@string/configure_email_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_label" />

    <EditText
        android:id="@+id/login_input"
        android:autofillHints="email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/input"
        android:ems="10"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:hint="@string/configure_email_hint"
        
        android:inputType="textEmailAddress"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_label" />

    <TextView
        android:id="@+id/password_label"
        style="@style/label"
        android:layout_marginTop="40dp"
        android:text="@string/configure_password_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_input" />
    
    <EditText
        android:id="@+id/password_input"
        android:autofillHints="password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        style="@style/input"
        android:ems="10"
        android:paddingHorizontal="8dp"
        android:textAlignment="textStart"
        android:hint="@string/configure_password_hint"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_label" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:indeterminateTint="?attr/app_text"
        android:indeterminateTintMode="src_atop"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input" />

    <TextView
        android:id="@+id/error_label"
        style="@style/label"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/progress_bar"
        app:layout_constraintTop_toBottomOf="@+id/password_input" />

    <TextView
        android:id="@+id/course_label"
        style="@style/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="@string/configure_course_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_label" />

    <GridLayout
        android:id="@+id/course_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:columnCount="4"
        android:rowCount="1"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_label">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/course_card_1"
            style="@style/card"
            >

            <TextView
                style="@style/card_text"
                android:text="@string/configure_course_option_1" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/course_card_2"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/configure_course_option_2" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/course_card_3"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/configure_course_option_3" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/course_card_4"
            style="@style/card">

            <TextView
                style="@style/card_text"
                android:text="@string/configure_course_option_4" />
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_button"
        style="@style/button"
        android:layout_width="183dp"
        android:layout_height="57dp"
        android:text="@string/configure_button_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>